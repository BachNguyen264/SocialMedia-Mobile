<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialMedia" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/segoebold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dusty_gray</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/segoebold</item>
        <item name="android:layout_marginLeft">@dimen/_32sdp</item>
        <item name="android:layout_marginRight">@dimen/_32sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
    </style>

    <style name="seperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_5sdp</item>
        <item name="android:background">@color/wild_sand</item>
    </style>
</resources>